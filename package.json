{
	"name": "ksb-pos",
	"version": "1.0.0",
	"private": true,
	"description": "KSB-POS",
	"author": "KSB-SOFT",
	"main": "public/electron.js",
	"homepage": "./",
	"devDependencies": {
		"@types/node": "^18.11.10",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"@types/socket.io-client": "^3.0.0",
		"@types/uuid": "^10.0.0",
		"autoprefixer": "^10.4.13",
		"concurrently": "^8.0.1",
		"cross-env": "^7.0.3",
		"electron": "^22.0.0",
		"electron-builder": "^23.6.0",
		"postcss": "^8.4.19",
		"rimraf": "^3.0.2",
		"socket.io-client": "^4.8.1",
		"tailwindcss": "3.2.4",
		"typescript": "^4.9.3",
		"wait-on": "^6.0.1"
	},
	"dependencies": {
		"@electron/remote": "^2.1.2",
		"@lottiefiles/dotlottie-react": "^0.13.0",
		"auto-launch": "^5.0.5",
		"base-64": "^1.0.0",
		"bcryptjs": "^2.4.3",
		"chart.js": "^4.4.6",
		"crypto-browserify": "^3.12.1",
		"electron-is-dev": "^2.0.0",
		"electron-reloader": "^1.2.3",
		"electron-store": "^10.0.1",
		"electron-updater": "^5.3.0",
		"framer-motion": "^11.13.1",
		"jspdf": "^2.5.2",
		"moment": "^2.30.1",
		"react": "^18.2.0",
		"react-calendar": "^5.1.0",
		"react-chartjs-2": "^5.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^5.3.0",
		"react-router-dom": "^6.4.4",
		"react-scripts": "^5.0.1",
		"react-toastify": "^9.1.1",
		"react-use": "^17.4.0",
		"sonner": "^1.7.0",
		"uuid": "^11.0.5"
	},
	"scripts": {
		"start": "electron .",
		"react-build": "react-scripts build",
		"react-start": "react-scripts start",
		"electron-build": "electron-builder",
		"backend-start": "cd back-app && npm run dev",
		"dev": "concurrently \"npm run backend-start\" \"npm run react-start\" \"npm run start\"",
		"build": "npm run react-build && npm run electron-build",
		"build:win": "npm run react-build && electron-builder --win",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"electron-dev": "wait-on http://localhost:3000 && electron ."
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"build": {
		"appId": "com.ksb.app",
		"productName": "KSB-POS",
		"copyright": "Copyright Â© 2025",
		"files": [
			"build/**/*",
			"node_modules/**/*",
			"public/electron.js",
			"src/**/*"
		],
		"directories": {
			"buildResources": "assets"
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "assets/ksb.ico"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"perMachine": false,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "KSB-POS",
			"license": "LICENSE.txt",
			"allowElevation": true,
			"installerIcon": "assets/ksb.ico",
			"uninstallerIcon": "assets/ksb.ico",
			"installerHeaderIcon": "assets/ksb.ico",
			"runAfterFinish": true,
			"include": "installer.nsh"
		},
		"extraResources": [
			{
				"from": "back-app",
				"to": "back-app",
				"filter": [
					"src/**/*",
					"package.json",
					"package-lock.json"
				]
			}
		]
	}
}

